!!!
%html(lang="en")
  %head
    %title Cigarillo
    %meta(charset="utf-8")
    %link(rel='stylesheet' href='/stylesheets/screen.css' type='text/css' media='screen, projection')
    
  %body(class="#{@css * ' '}")
    #canvas
      %nav.nav
        %header.header
          %h1
            %a(href="/") Cigarillo
        %ul
          - if @repo
            %li.active
              %a.active(href="/repos/#{@repo._id}")
                %span.owner= @repo.owner
                %span.name= @repo.name
              %ul
                %li
                  %a(href="/repos/#{@repo._id}"){active('builds')} Builds
                %li
                  %a(href="/repos/#{@repo._id}?setup=1"){active('setup')} Setup

          - @repos_menu.each do |repo|
            %li
              %a(href="/repos/#{repo._id}")
                %span.owner= repo.owner
                %span.name= repo.name

          - if @more_menu_repos
            %li.more
              %a(href="/") more...
                   
      %section#content= yield
    %script(src="/javascripts/vendor/jquery-1.4.4.min.js" type="text/javascript")
    %script(src="/javascripts/cigarillo.js" type="text/javascript")
